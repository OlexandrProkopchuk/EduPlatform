@model IEnumerable<EduPlatform.Data.Quiz>

@{
    ViewData["Title"] = "Quizzes";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">Список тестів</h2>
    <a asp-action="Create" class="btn btn-primary">
        + Створити новий тест
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        Наразі немає тестів. Створіть перший!
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <span class="badge bg-secondary mb-2">
                            @item.Course?.Title
                        </span>

                        <h5 class="card-title">@item.Title</h5>

                        <p class="card-text text-muted">
                            @if (item.TimeLimitMinutes > 0)
                            {
                                <span>⏱ Час: @item.TimeLimitMinutes хв</span>
                            }
                            else
                            {
                                <span>Без обмеження часу</span>
                            }
                        </p>
                    </div>

                    <div class="card-footer bg-white border-0 d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">Деталі</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">Редагувати</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Видалити</a>
                    </div>

                    <div class="p-3 pt-0">
                        <a class="btn btn-success w-100"
                           asp-controller="TakeQuiz"
                           asp-action="Start"
                           asp-route-id="@item.Id">
                            Почати тест
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
